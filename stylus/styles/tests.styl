@require 'all'
h1
  font-family: 'Monofett', cursive;
  font-size: 5em
  margin: 0px
  margin-bottom: 30px
.container
  background: rgba(100,255,100,0.5)
  padding: 50px
  text-align: center
  display: run-in;
  margin: 0 auto
  width: 25%
  *
    margin-top: 10px
    padding: 10px
  select
    width: 100%
    background: rgba(90,80,90,0.5)
  button
    color: white
    text-decoration: none
    margin: 10px
    background: rgba(50,50,50,0.5)
    border: none
    &:hover
      background: rgba(50,50,50,0.8)
#questionContainer
  border: 2px solid gray
  width: 50%
  margin: 0 auto
  .query
    font-size: 1.2em
    padding: 5px
    padding-left: 30px
  .options
    // background: red
    .option
      border: 1px solid #a9a9a9
      padding: 10px
      padding-left: 50px
      &:hover
        background: rgba(20,100,255,0.8)
      &.selected
        background: rgba(20,255,100,0.6)
  button
    padding: 10px 15px
    background: green
